/* pages/main/main.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

page {
  background-color: #fff;
}
/*图片大小自适应*/

image {
  width: 100%;
  display: block;
}
.banner-box {
    width: 100%;
    height: 300rpx;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.banner-box image {
    width: 300rpx;
    height: 300rpx;
}

.title-box {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    border-bottom: solid 1px #aaa;
}

.title-box text {
    font-size: 75%;
    line-height: 3em;
    color: #666;
}

.page-section {
    margin-bottom: 20rpx;
}

.flex-wrp {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 50rpx 5%;
}

.func-box {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.func-ico {
    width: 100%;
}

.func-box text {
    font-size: 70%;
    line-height: 2em;
}

